{
  "name": "valintojen-toteuttaminen",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "noop": "",
    "dev": "touch .env.development.local && NODE_EXTRA_CA_CERTS=\"$(mkcert -CAROOT)/rootCA.pem\" node --env-file=.env.development --env-file=.env.development.local dev-server.mjs",
    "dev-test": "TEST=true APP_URL=https://localhost:3404 VIRKAILIJA_URL=http://localhost:3104 npm run dev",
    "build": "STANDALONE=true next build",
    "build-test": "APP_URL=https://localhost:3404 VIRKAILIJA_URL=http://localhost:3104 next build",
    "start": "NODE_ENV=production npm run dev",
    "start-test": "NODE_ENV=production npm run dev-test",
    "lint-next": "next lint --max-warnings=0",
    "lint-next:fix": "next lint --fix",
    "lint-playwright": "eslint --max-warnings=0 ./tests/**/*.ts",
    "lint-playwright:fix": "eslint --max-warnings=0 ./tests/**/*.ts",
    "lint": "npm run lint-next && npm run lint-playwright",
    "lint:fix": "npm run lint-next:fix && npm run lint-playwright:fix",
    "prettier": "prettier -u -c *",
    "prettier:fix": "prettier --write -u *",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "create-dev-certs": "mkdir -p certificates && cd certificates && mkcert localhost && mkcert -install",
    "create-self-signed-dev-certs": "mkdir -p certificates && openssl req -x509 -newkey rsa:4096 -keyout ./certificates/localhost-key.pem -out ./certificates/localhost.pem -sha256 -days 365 -nodes -subj \"/C=XX/ST=StateName/L=CityName/O=CompanyName/OU=CompanySectionName/CN=CommonNameOrHostname\"",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@ebay/nice-modal-react": "^1.2.13",
    "@emotion/cache": "^11.13.1",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^6.1.4",
    "@mui/material": "^6.1.4",
    "@mui/material-nextjs": "^6.1.4",
    "@opetushallitus/oph-design-system": "github:opetushallitus/oph-design-system#v0.1.3",
    "@tanstack/react-query": "^5.59.15",
    "@tanstack/react-query-devtools": "^5.59.15",
    "@xstate/react": "^4.1.3",
    "cookie": "^1.0.1",
    "date-fns-tz": "^3.2.0",
    "i18next": "^23.16.2",
    "i18next-fetch-backend": "^6.0.0",
    "next": "^14.2.15",
    "nuqs": "^1.20.0",
    "react": "^18",
    "react-dom": "^18",
    "react-error-boundary": "^4.1.2",
    "react-i18next": "^15.0.3",
    "remeda": "^2.15.2",
    "xstate": "^5.18.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@axe-core/react": "^4.10.0",
    "@playwright/test": "^1.48.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/cookie": "^0.6.0",
    "@types/css.escape": "^1.5.2",
    "@types/node": "^20.14.2",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.3",
    "autoprefixer": "^10.4.20",
    "css.escape": "^1.5.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^1.8.0",
    "http-proxy-middleware": "^3.0.3",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
