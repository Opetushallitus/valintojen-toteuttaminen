{
  "name": "valintojen-toteuttaminen",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "noop": "",
    "dev": "touch .env.development.local && NODE_EXTRA_CA_CERTS=\"$(mkcert -CAROOT)/rootCA.pem\" node --env-file=.env.development --env-file=.env.development.local dev-server.mjs",
    "dev-test": "TEST=true APP_URL=https://localhost:3404 VIRKAILIJA_URL=http://localhost:3104 npm run dev",
    "build": "STANDALONE=true next build",
    "build-test": "APP_URL=https://localhost:3404 VIRKAILIJA_URL=http://localhost:3104 next build",
    "start": "NODE_ENV=production npm run dev",
    "start-test": "NODE_ENV=production npm run dev-test",
    "lint-next": "next lint --max-warnings=0",
    "lint-next:fix": "next lint --fix",
    "lint-playwright": "eslint --max-warnings=0 ./tests/**/*.ts",
    "lint-playwright:fix": "eslint --max-warnings=0 ./tests/**/*.ts",
    "lint": "npm run lint-next && npm run lint-playwright",
    "lint:fix": "npm run lint-next:fix && npm run lint-playwright:fix",
    "prettier": "prettier -u -c *",
    "prettier:fix": "prettier --write -u *",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "create-dev-certs": "mkdir -p certificates && cd certificates && mkcert localhost && mkcert -install",
    "create-self-signed-dev-certs": "mkdir -p certificates && openssl req -x509 -newkey rsa:4096 -keyout ./certificates/localhost-key.pem -out ./certificates/localhost.pem -sha256 -days 365 -nodes -subj \"/C=XX/ST=StateName/L=CityName/O=CompanyName/OU=CompanySectionName/CN=CommonNameOrHostname\"",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@emotion/cache": "^11.11.0",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/icons-material": "^5.15.19",
    "@mui/material": "^5.15.19",
    "@mui/material-nextjs": "^5.15.11",
    "@opetushallitus/oph-design-system": "github:opetushallitus/oph-design-system#v0.0.2",
    "@tanstack/react-query": "^5.44.0",
    "@tanstack/react-query-devtools": "^5.44.0",
    "@xstate/react": "^4.1.1",
    "cookie": "^0.6.0",
    "date-fns-tz": "^3.1.3",
    "i18next": "^23.11.5",
    "i18next-fetch-backend": "^6.0.0",
    "next": "^14.2.4",
    "nuqs": "^1.17.4",
    "react": "^18",
    "react-dom": "^18",
    "react-error-boundary": "^4.0.13",
    "react-i18next": "^14.1.2",
    "remeda": "^2.11.0",
    "xstate": "^5.14.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@axe-core/react": "^4.9.1",
    "@playwright/test": "^1.44.1",
    "@testing-library/dom": "^10.3.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/cookie": "^0.6.0",
    "@types/node": "^20.14.2",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.0.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^1.6.2",
    "http-proxy-middleware": "^3.0.0",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.6",
    "postcss": "^8",
    "prettier": "^3.3.2",
    "typescript": "^5",
    "vitest": "^2.0.1"
  }
}
