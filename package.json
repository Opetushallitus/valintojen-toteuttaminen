{
  "name": "valintojen-toteuttaminen",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.5",
  "scripts": {
    "prepare": "husky",
    "dev": "touch .env.development.local && node --env-file=.env.development --env-file=.env.development.local dev-server.mjs",
    "dev-test": "TEST=true APP_URL=https://localhost:3404 VIRKAILIJA_URL=http://localhost:3104 pnpm run dev",
    "build": "STANDALONE=true next build",
    "build-test": "TEST=true APP_URL=https://localhost:3404 VIRKAILIJA_URL=http://localhost:3104 next build",
    "start": "NODE_ENV=production pnpm run dev",
    "start-test": "TEST=true NODE_ENV=production pnpm run dev-test",
    "lint": "eslint --max-warnings=0",
    "lint:fix": "pnpm run lint -- --fix",
    "prettier": "prettier -u -c *",
    "prettier:fix": "prettier --write -u *",
    "test": "vitest",
    "test:debug": "DEBUG=vite-node:* vitest run",
    "test:coverage": "vitest run --coverage",
    "create-dev-certs": "mkdir -p certificates && cd certificates && mkcert localhost && mkcert -install",
    "create-self-signed-dev-certs": "mkdir -p certificates && openssl req -x509 -newkey rsa:4096 -keyout ./certificates/localhost-key.pem -out ./certificates/localhost.pem -sha256 -days 365 -nodes -subj \"/C=XX/ST=StateName/L=CityName/O=CompanyName/OU=CompanySectionName/CN=CommonNameOrHostname\"",
    "typecheck": "tsc",
    "test-playwright-docker": "./scripts/run-playwright-tests-in-docker.sh",
    "start-and-test-playwright-docker": "START_SERVER_AND_TEST_INSECURE=1 start-server-and-test start-test https://localhost:3404 'pnpm run test-playwright-docker -- $PLAYWRIGHT_ARGS'",
    "node-extra-ca-certs": "export NODE_EXTRA_CA_CERTS=\"$(mkcert -CAROOT)/rootCA.pem\""
  },
  "dependencies": {
    "@date-fns/tz": "^1.2.0",
    "@ebay/nice-modal-react": "^1.2.13",
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.7",
    "@mui/material": "^6.4.7",
    "@mui/material-nextjs": "^6.4.3",
    "@mui/system": "^6.4.7",
    "@opetushallitus/oph-design-system": "^1.0.0",
    "@tanstack/react-query": "^5.68.0",
    "@tanstack/react-query-devtools": "^5.68.0",
    "@tolgee/format-icu": "^6.2.2",
    "@tolgee/react": "^6.2.2",
    "@xstate/react": "^5.0.3",
    "date-fns": "^4.1.0",
    "immer": "^10.1.1",
    "next": "^15.4.6",
    "nextjs-toploader": "^3.7.15",
    "nuqs": "^2.4.1",
    "quill": "^2.0.3",
    "react": "^19.0.0",
    "react-datepicker": "^8.2.1",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "remeda": "^2.32.0",
    "xstate": "^5.19.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@axe-core/react": "^4.10.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.22.0",
    "@next/eslint-plugin-next": "^15.4.6",
    "@opentelemetry/api": "^1.9.0",
    "@playwright/test": "^1.51.0",
    "@statelyai/inspect": "^0.4.0",
    "@tanstack/eslint-plugin-query": "^5.78.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.13.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/regexp.escape": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.8",
    "@vitest/eslint-plugin": "^1.1.37",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "^15.2.2",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-playwright": "^2.2.0",
    "http-proxy-middleware": "^3.0.3",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.0",
    "postcss": "^8",
    "prettier": "^3.5.3",
    "regexp.escape": "^2.0.1",
    "start-server-and-test": "^2.0.11",
    "typescript": "^5.9.3",
